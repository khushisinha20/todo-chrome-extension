{
    "manifest_version": 3,
    "name": "Todo Task Manager",
    "version": "1.0",
    "description": "Manage tasks with a Chrome Extension",
    "permissions": ["storage", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "host_permissions": [
      "http://localhost:8080/tasks/*"
    ]
  }
  
